{
  "name": "@rizzle/lint-configs",
  "type": "module",
  "version": "0.0.1",
  "author": "rizzle <khoadduy@gmail.com>",
  "description": "Plug-and-play lint configurations for any project",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs"
    },
    "./eslint": {
      "types": "./dist/types/eslint.config.d.ts",
      "require": "./dist/cjs/eslint.config.js",
      "import": "./dist/esm/eslint.config.mjs"
    },
    "./prettier": {
      "types": "./dist/types/prettier.config.d.ts",
      "require": "./dist/cjs/prettier.config.js",
      "import": "./dist/esm/prettier.config.mjs"
    },
    "./react-native": {
      "types": "./dist/types/react-native.config.d.ts",
      "require": "./dist/cjs/react-native.config.js",
      "import": "./dist/esm/react-native.config.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup && node scripts/post-build.mjs",
    "clean": "rm -rf dist",
    "test": "node scripts/test.mjs",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "dependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.18.1"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/eslint__js": "^8.42.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-native": {
      "optional": true
    },
    "eslint-plugin-testing-library": {
      "optional": true
    }
  },
  "keywords": [
    "eslint",
    "prettier",
    "lint",
    "config",
    "typescript",
    "formatting",
    "react",
    "react-native",
    "import-sort"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tomokai-lab.git",
    "directory": "toolkit/packages/lint-configs"
  },
  "bugs": {
    "url": "https://github.com/yourusername/tomokai-lab/issues"
  },
  "homepage": "https://github.com/yourusername/tomokai-lab/tree/main/toolkit/packages/lint-configs#readme"
}
