{
  "name": "@rizzle/fetch",
  "type": "module",
  "version": "0.0.1",
  "author": "rizzle <khoadduy@gmail.com>",
  "description": "Type-safe fetch wrapper with error handling and polyfill support",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m0rethanb1ue/toolkit.git",
    "directory": "toolkit/packages/fetch"
  },
  "bugs": {
    "url": "https://github.com/m0rethanb1ue/toolkit/issues"
  },
  "homepage": "https://github.com/m0rethanb1ue/toolkit/blob/main/packages/fetch/README.md",
  "keywords": [
    "fetch",
    "http",
    "request",
    "typescript",
    "type-safe",
    "error-handling",
    "polyfill",
    "browser",
    "nodejs"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs"
    },
    "./polyfill": {
      "types": "./dist/types/polyfill.d.ts",
      "require": "./dist/cjs/polyfill.js",
      "import": "./dist/esm/polyfill.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "dependencies": {
    "cross-fetch": "4.1.0"
  },
  "devDependencies": {
    "@types/node": "22.10.5",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  }
}
